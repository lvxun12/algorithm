{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {"cwd": "${fileDirname}"},
            "windows": {
                "command": "g++",
                "args": [
                    "-ggdb",
                    "${file}",
                    "--std=c++11",
                    "-o",
                    "${fileDirname}//build//${fileBasenameNoExtension}.exe"
                ]
            }
        }
    ]
}
